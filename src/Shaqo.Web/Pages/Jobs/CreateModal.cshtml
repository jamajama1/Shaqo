@page
@using Shaqo.Localization
@using Shaqo.Web.Pages.Jobs
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Shaqo.Web.Pages.Jobs.CreateModalModel
@inject IStringLocalizer<ShaqoResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="Job" asp-page="/Jobs/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewJob"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
